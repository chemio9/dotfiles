#!/bin/bash

if [[ $1 == "--toggle" ]]; then
        if pgrep tint2; then
                pkill tint2
                echo "юдо" > $HOME/.config/polybar/scripts/tray-status
                exit 1
        else
                tint2 &
                echo "юд▒" > $HOME/.config/polybar/scripts/tray-status
        fi
        exit
fi

if [[ $1 == "--kill" ]]; then
        pkill tint2
        echo "юдо" > $HOME/.config/polybar/scripts/tray-status
        exit 1
fi
